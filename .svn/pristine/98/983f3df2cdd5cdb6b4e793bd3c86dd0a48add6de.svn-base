//agrega un nuevo empleado
function regNvoEmp(formu){
	$.ajax({
		type:"POST",
		url:"helper/regEmp.php",
		data : $("#"+formu).serialize(),
		success:function(data){
			$("#modalNvoEmp").modal("hide");
			$('body').removeClass('modal-open');
$('.modal-backdrop').remove();
			gestionEmpleados();
		}
	});
}

