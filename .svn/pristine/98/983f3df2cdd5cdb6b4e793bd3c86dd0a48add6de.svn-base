//abre el modal para registrar un nuevo empleado
function modalNvoEmp() {
	$.ajax({
		type : "POST",
		url : "helper/modalNvoEmp.php",
		success : function(data) {
			$("#modalNvoEmp").html(data);
			$("#modalNvoEmp").modal("show");
		}
	});
}

