var mainC = "#page-inner";
//contenedor principal

//carga la interfaz para la gestion de empleados
function gestionEmpleados() {
	$.ajax({
		type : "POST",
		url : "view/vEmpleados.php",
		success : function(data) {
			$(mainC).html(data);
		}
	});
}

